#!/bin/sh
# shellcheck disable=SC1117,SC1083,SC1073,SC1056,SC1072
# dmenu not load setxkbmap in xinitrc

super + Escape
	pkill -USR1 -x sxhkd

super + f
    launch_brave
    #firefox

shift + Print
  $HOME/scripts/video/record.sh

Print
  flameshot gui

ctrl + shift + 1
  setxkbmap us
  
ctrl + shift + 1
  setxkbmap ara

super + shift + p
    passmenu

#super + q
#  bash /root/scripts/dmenu/learn_with_dmenu.sh
#
#super + shift + q
#  bash /root/scripts/dmenu/add-word.sh

super + n
  nv

super + m
    mdbook serve /root/book/ayoubelmhamdi.github.io -p 8002

# super + s
    # surfer http://localhost:8002

super + shift + p
  bash ~/scripts/my/dmenu/dmenu_command.sh

super + o
  mpv --loop $(xclip -o -sel clip)

#connect
super + shift + c
    kdeconnect-cli -d ca4847d95527874b --pair

# super + s
#     kdeconnect-cli -d ca4847d95527874b --share-text $(xclip -o -sel clip)

# super + c 
#   wpa_cli reassociate 1

super + w
    fix_wifi

XF86Audio{Raise,Lower}Volume
    amixer sset Master {1+,1-} unmute

XF86AudioMute
    amixer sset 'Master' 10%
